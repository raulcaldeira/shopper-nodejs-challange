generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MeasureType {
  WATER
  GAS
}

model Measures {
  id               String      @id @default(uuid())
  customer_code    String
  measure_type     MeasureType
  image_url        String
  recognized_value Int
  confirmed_value  Int
  created_at       DateTime    @default(now())

  @@map("measures")
}
